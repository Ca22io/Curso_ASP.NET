@model Aula_4.Models.Usuario
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Alterar Usuário</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-primary">Bem-vindo à Alterar Usuário</h1>
        <hr>
        <form method="post" class="w-25">
            <div class="mb-3">
                <label asp-for="Nome">Nome</label>
                <input asp-for="Nome" class="form-control" value="@Model.Nome" required>
            </div>
            <div class="mb-3">
                <label asp-for="Email">Email</label>
                <input asp-for="Email"class="form-control" value="@Model.Email" required>
            </div>
            
            <div class="mt-3">
                <a href="/Home/Usuarios" class="btn btn-light">Cancelar</a>
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </form>
    </div>
</body>
</html>