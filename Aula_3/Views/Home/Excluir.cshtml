@model Aula_3.Models.Usuario
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Exclusão de Usuário</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-primary">Exclusão de Usuário</h1>
        <hr>
        <h4>Deseja realmente excluir o usuário <span class="text-danger">@Model.Nome?</span></h4>
        <form method="post" class="w-25">
            <input type="hidden" asp-for="IdUsuario">
            <div class="mt-3">
                <a asp-action="Usuarios" class="btn btn-success">Não</a>
                <button type="submit" class="btn btn-danger">Sim</button>
            </div>
        </form>
    </div>
</body>
</html>