@model IEnumerable<ProdutoModel>
@{
    ViewBag.Subtitulo = "Listagem de Produtos";
}

<header class=" d-flex justify-content-between align-items-center">
    <div>
        <h1 class="text-primary" >@ViewBag.Subtitulo</h1>
    </div>
    <div>
        <a class="btn btn-primary" asp-action="Cadastrar">Novo Produto</a>
    </div>
</header>
<hr>

<partial name="_Mensagem" /></partial>

@if (Model.Count() > 0)
{
    <table class="table table-striped tabela-produtos">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Categoria</th>
                <th>Estoque</th>
                <th>Preço</th>
                <th>Ações</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var produto in Model)
            {
                <tr>
                    <td>@produto.Nome</td>
                    <td>@produto.Categoria.Nome</td>
                    <td>@produto.Estoque.ToString("D4")</td>
                    <td>@produto.Preco.ToString("C")</td>

                    <td>
                        <a class="btn btn-sm btn-secondary" asp-action="Cadastrar" asp-route-id="@produto.IdProduto">Editar</a>
                        <a class="btn btn-sm btn-danger" asp-action="Excluir" asp-route-id="@produto.IdProduto">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
}

else
{

    <p>Não há nenhum produto cadastrado.</p>

}