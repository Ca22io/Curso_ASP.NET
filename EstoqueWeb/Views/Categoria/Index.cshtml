@model IEnumerable<CategoriaModel>
@{
    ViewBag.Subtitulo = "Listagem de Categorias";
}

<header class=" d-flex justify-content-between align-items-center">
    <div>
        <h1 class="text-primary" >@ViewBag.Subtitulo</h1>
    </div>
    <div>
        <a class="btn btn-primary" asp-action="Cadastrar">Nova Categoria</a>
    </div>
</header>
<hr>

<partial name="_Mensagem" /></partial>

@if (Model.Count() > 0)
{
    <table class="table table-striped tabela-categorias">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var categoria in Model)
            {
                <tr>
                    <td>@categoria.Nome</td>
                    <td>
                        <a class="btn btn-sm btn-secondary" asp-action="Cadastrar" asp-route-id="@categoria.IdCategoria">Editar</a>
                        <a class="btn btn-sm btn-danger" asp-action="Excluir" asp-route-id="@categoria.IdCategoria">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
}

else
{

    <p>Não há nenhuma categoria cadastrada.</p>

}