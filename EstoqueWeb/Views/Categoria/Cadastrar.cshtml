@model CategoriaModel
@{
    if (Context.Request.RouteValues.ContainsKey("id"))
    {
        ViewBag.Subtitulo = "Alteração de Categoria";
    }
    else
    {
        ViewBag.Subtitulo = "Cadastro de Categoria";
    }
}

<h1 class="text-primary">@ViewBag.Subtitulo</h1>
<hr />

<form asp-action="Cadastrar">
    <input type="hidden" name="id" value="@Model.IdCategoria"/>
    <div class="form-group row">
        <label asp-for="@Model.Nome">Nome:</label>
        <input asp-for="@Model.Nome" class="form-control col-sm-8 col-lg-4" autofocus/>
        <span asp-validation-for="@Model.Nome" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
        <button type="submit" class="btn btn-primary">Salvar</button>
    </div>
</form>