@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/lib/bootstrap5/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/lib/bootstrap-icons/font/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/estilos.css" />

    <title>Envio de E-mail :: @ViewBag.Subtitulo</title>
</head>
<body style="padding-bottom: 80px;" class="mb-3">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="/">Controle de Usuários</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarMain">
                    <div class="navbar-nav">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Principal</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-2">
        <partial name="_MensagemPartial" />
        @RenderBody()
    </div>
        
    <footer class="text-light bg-dark p-3 fixed-bottom text-center">
        Controle de Usuários&copy; @DateTime.Now.Year.ToString()<br>
        Todos os direitos reservados.
    </footer>

    <script src="/lib/bootstrap5/dist/js/bootstrap.js"></script>
    
    @RenderSection("Scripts", required: false)
</body>
</html>