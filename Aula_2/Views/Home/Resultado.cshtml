@model IEnumerable<Resposta>

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Resultados Parcial</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h2 class="mb-4">Lista de Resultados</h2>
        <ul class="list-group mb-4">
        @foreach (Resposta r in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>@r.Nome</span>
                <span class="badge bg-@(r.Sim is bool sim ? (sim ? "success" : "danger") : "secondary")">
                    @(r.Sim.Value ? "Sim" : "Não")
                </span>
            </li>
        }
        </ul>
        <a asp-action="Index" class="btn btn-primary">Voltar para o Início</a>
    </div>
</body>
</html>